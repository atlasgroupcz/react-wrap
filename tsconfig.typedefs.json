{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "outDir": "lib",
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "exclude": ["**/*.test.*", "tests", "node_modules", "lib"]
}

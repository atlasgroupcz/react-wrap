{
    "name": "@atlasgroup/react-wrap",
    "version": "0.1.0",
    "private": false,
    "main": "lib/index.js",
    "description": "A straight-forward react component logic reusing and close-coupling prevention utility",
    "scripts": {
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
        "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "version": "yarn changelog && git stage CHANGELOG.md",
        "depsTree": "dpdm src --ext \".ts,.tsx,.json\"",
        "lint": "eslint src -c .eslintrc.json --ext .js,.jsx,.ts,.tsx --max-warnings=0",
        "test": "jest -c jest.config.js",
        "typecheck": "tsc --noEmit",
        "build": "cross-env NODE_ENV=production babel src -d lib --extensions .ts,.tsx --ignore \"src/**/*.test.tsx\",\"src/**/*.test.ts\" --config-file ./babelrc.build.json && yarn typedefs",
        "prepublishOnly": "yarn build",
        "typedefs": "ttsc -p ./tsconfig.typedefs.json",
        "validateDepsTree": "node scripts/validateDependencyTree.js",
        "pruneModules": "ts-prune -p tsconfig.json -i \"tests|index|.test.|.*\\.{js|jsx}\" | grep -v \"(used in module)\" | grep --color -E \" - .*|$\" -",
        "integrate": "yarn lint && yarn typecheck && yarn validateDepsTree && yarn test"
    },
    "author": "Atlas Consulting",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.12.8",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/preset-env": "^7.12.7",
        "@babel/preset-typescript": "^7.12.7",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@testing-library/react": "^11.2.6",
        "@testing-library/react-hooks": "^3.4.2",
        "@types/jest": "^26.0.23",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "babel-eslint": "^10.1.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "babel-plugin-react-app": "^0.0.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-minify": "^0.5.1",
        "babel-preset-react-app": "^10.0.0",
        "conventional-changelog-cli": "^2.1.1",
        "cross-env": "^7.0.2",
        "devmoji": "^2.1.11",
        "dpdm": "^3.5.0",
        "eslint": "^7.14.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-flowtype": "^5.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-environment-node": "^26.6.2",
        "jest-playwright-preset": "^1.5.2",
        "playwright": "^1.10.0",
        "prettier": "^2.2.0",
        "pretty-quick": "^3.1.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-test-renderer": "^17.0.1",
        "ts-jest": "^26.4.4",
        "ts-prune": "^0.8.4",
        "ttypescript": "^1.5.12",
        "typescript": "^4.1.2",
        "typescript-transform-paths": "^2.0.4"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "pretty-quick --staged",
            "prepare-commit-msg": "devmoji -e --lint",
            "post-commit": "yarn depsTree"
        }
    },
    "peerDependencies": {
        "react": ">=16.8"
    }
}

{
    "name": "@atlasgroup/react-wrap",
    "description": "A straight-forward react component logic reusing and close-coupling prevention utility",
    "version": "1.3.0",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/atlasgroupcz/react-wrap"
    },
    "homepage": "https://atlasgroupcz.github.io/react-wrap",
    "main": "lib/index.js",
    "scripts": {
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
        "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "version": "yarn docs && yarn changelog && git stage .",
        "docs": "typedoc src/index.ts",
        "depsTree": "dpdm src --ext \".ts,.tsx,.json\"",
        "lint": "eslint src -c .eslintrc.json --ext .js,.jsx,.ts,.tsx --max-warnings=0",
        "test": "jest -c jest.config.js",
        "typecheck": "tsc --noEmit",
        "build": "cross-env NODE_ENV=production babel src -d lib --extensions .ts,.tsx --ignore \"src/**/*.test.tsx\",\"src/**/*.test.ts\" --config-file ./babelrc.build.json && yarn typedefs",
        "prepublishOnly": "yarn build",
        "typedefs": "ttsc -p ./tsconfig.typedefs.json",
        "validateDepsTree": "node scripts/validateDependencyTree.js",
        "pruneModules": "ts-prune -p tsconfig.json -i \"tests|index|.test.|.*\\.{js|jsx}\" | grep -v \"(used in module)\" | grep --color -E \" - .*|$\" -",
        "integrate": "yarn lint && yarn typecheck && yarn validateDepsTree && yarn test"
    },
    "author": "Atlas Consulting",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/plugin-transform-runtime": "^7.18.0",
        "@babel/preset-env": "^7.18.0",
        "@babel/preset-typescript": "^7.17.12",
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@testing-library/react": "^13.2.0",
        "@testing-library/react-hooks": "^8.0.0",
        "@types/jest": "^26.0.23",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-react-app": "^0.0.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-minify": "^0.5.2",
        "babel-preset-react-app": "^10.0.1",
        "conventional-changelog-cli": "^2.2.2",
        "cross-env": "^7.0.3",
        "devmoji": "^2.3.0",
        "dpdm": "^3.9.0",
        "eslint": "^8.16.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "^4.5.0",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-environment-node": "^26.6.2",
        "jest-playwright-preset": "^1.5.2",
        "playwright": "^1.22.2",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.3",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-test-renderer": "^18.1.0",
        "ts-jest": "^26.4.4",
        "ts-prune": "^0.10.3",
        "ttypescript": "^1.5.13",
        "typedoc": "^0.22.15",
        "typescript": "^4.6.4",
        "typescript-transform-paths": "^3.3.1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "pretty-quick --staged",
            "prepare-commit-msg": "devmoji -e --lint",
            "post-commit": "yarn depsTree"
        }
    },
    "peerDependencies": {
        "react": ">=16.8"
    },
    "keywords": [
        "react",
        "wrap",
        "components",
        "hooks",
        "pattern"
    ]
}
